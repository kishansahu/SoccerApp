<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myindividualPlayerTab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/favPlayerDetailHolderSeperator"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/list_separator" />

    <RelativeLayout
        android:id="@+id/favPlayerDetailHolder"
        android:layout_width="390dp"
        android:layout_height="155dp"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/myindividualPlayerPic"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp" >
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/myindividualPlayerTeamPic"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:alpha="0.7" >
            </ImageView>

            <ImageView
                android:id="@+id/myindividualPlayerFavouritePic"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/star_high" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/myindividualPlayerPic"
            android:gravity="top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myindividualPlayerName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_play_card"
                android:textSize="22dp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/myindividualPlayerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/gray_play_card"
                android:textSize="18dp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/myindividualPlayerGameDetails"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="17dp" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>