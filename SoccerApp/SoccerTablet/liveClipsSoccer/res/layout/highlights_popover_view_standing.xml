<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/standingScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_gradient_background"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/standing_text"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Standings"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/doneButtonImage"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/done_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_gradient_background"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingTop="2dip" >

        <TextView
            android:id="@+id/heading_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient_background"
            android:text="American Football Conference"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/standing_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>