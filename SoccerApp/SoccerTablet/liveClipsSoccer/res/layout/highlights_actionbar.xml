<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout  android:id="@+id/commonFragmentMenuHeader"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:visibility="invisible" >

         <ImageView
            android:id="@+id/main_container_fragment"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/liveclips_hori_text_logo" >
        </ImageView>
		 <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/closeButtonHeader"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/crossbutton" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activityMenuHeader"
        android:layout_width="300dp"
        
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/sliderView"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/menuicon" >
        </ImageView>

        <Spinner
            android:id="@+id/sliderViewSpinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/sliderView"
            android:entries="@array/highLights_items" >
        </Spinner>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/weekLayout"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/weekNumber"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:text="5" />

        <TextView
            android:id="@+id/weeks"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:text="WEEK"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/leadersLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="405dp"
        android:layout_marginTop="3dp"
        android:drawableTop="@drawable/icon_drives"
        android:text="LEADERS"
        android:textColor="@color/white" >
    </TextView>

    <TextView
        android:id="@+id/milestonesLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="505dp"
        android:layout_marginTop="3dp"
        android:drawableTop="@drawable/icon_schedule"
        android:text="MILESTONES"
        android:textColor="@color/white" >
    </TextView>

    <TextView
        android:id="@+id/standingLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="605dp"
        android:layout_marginTop="3dp"
        android:drawableTop="@drawable/icon_stats"
        android:text="STANDING"
        android:textColor="@color/white" >
    </TextView>

    <Button
        android:id="@+id/alertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/grey_container"
        android:textColor="@color/white" >
    </Button>

</RelativeLayout>