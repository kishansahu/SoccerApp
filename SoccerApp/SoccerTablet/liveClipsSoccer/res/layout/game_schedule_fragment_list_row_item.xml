<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_bar_default_height"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/first_team_logo"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/first_team_shortname"
            android:layout_width="30dp"
            android:gravity="center_vertical"
            android:layout_height="@dimen/list_bar_default_height"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/first_team_score"
            android:layout_width="30dp"
            android:gravity="center_vertical"
            android:layout_height="@dimen/list_bar_default_height"
            android:layout_marginLeft="2dp" />
		
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AT"
            />
        
        <ImageView
            android:id="@+id/second_team_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/second_team_shortname"
            android:layout_width="30dp"
            android:gravity="center_vertical"
            android:layout_height="@dimen/list_bar_default_height"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/second_team_score"
            android:layout_width="30dp"
            android:gravity="center_vertical"
            android:layout_height="@dimen/list_bar_default_height" />
        

        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp" />
    </TableRow>

</TableLayout>