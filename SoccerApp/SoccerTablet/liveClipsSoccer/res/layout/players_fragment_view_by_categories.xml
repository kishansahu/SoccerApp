<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

  
    <View
        android:id="@+id/playerfragmentMenuHeaderBottom"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/white" />
     
    <!-- Editext for Search -->

    <EditText
        android:id="@+id/searchBarPlayerByCategory"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/playerfragmentMenuHeaderBottom"
        android:drawableLeft="@drawable/search_icon"
        android:hint="@string/find_player_hint"
        android:background="@color/white"
        android:inputType="textVisiblePassword" />

    <ListView
        android:id="@+id/findPLayerByCategoryListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBarPlayerByCategory"
        android:focusable="true" />

</RelativeLayout>