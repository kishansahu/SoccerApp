<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/statsHeader"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/black_gradient_background"
        android:gravity="center"
        android:text="Stats"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/orange_gradient_background"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/statFirstTeam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:text="Team 1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/statSecondTeam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Team 2"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/game_stats_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

</LinearLayout>