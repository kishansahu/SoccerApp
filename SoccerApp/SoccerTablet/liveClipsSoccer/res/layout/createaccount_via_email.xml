<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="520dp"
        android:layout_height="550dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@color/grey_light"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/createAccountHeaderBar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/action_bar_default_height"
            android:layout_marginBottom="10dp"
            android:background="@drawable/black_bar"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/backToSignUpScreenButton"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/createAccountByEmailHeaderBarMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/createAccountByEmailHeaderBarMessageText"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/createAccountByEmailHeaderMessage"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/createAccountByEmailHeaderMessageText"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/signUpEmailEditbox"
            android:layout_width="316dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/signUpPasswordEditbox"
            android:layout_width="316dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/errorMessageForEmailSignUp"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:textColor="@color/red"
            android:textSize="17sp" />

        <Button
            android:id="@+id/createAccountSignupButton"
            android:layout_width="316dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue_dark"
            android:text="Sign Up"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>