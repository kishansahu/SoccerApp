<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableRow
        android:id="@+id/standingsTableRow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_bar_default_height"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/team_logo"
            android:layout_width="@dimen/list_bar_image_icon_default_width"
            android:layout_height="@dimen/list_bar_image_icon_default_height" >
        </ImageView>

        <TextView
            android:id="@+id/team_name"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/match_wins"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/match_losses"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/disclouser"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical" />
    </TableRow>

</TableLayout>