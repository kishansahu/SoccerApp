<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playCardFrontSidePlaySectionImageWithPlayButtonId"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/playCardFrontSidePlaySectionImageWithPlayButtonImageViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/contentDescription" />

    <ImageView
        android:id="@+id/playCardFrontSidePlaySectionImageWithPlayButtonPlayButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0.50"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/click_to_play_button" 
        android:clickable="true"/>

</RelativeLayout>